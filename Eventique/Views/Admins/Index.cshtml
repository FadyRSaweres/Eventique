<!--  /Traffic -->
<div class="clearfix"></div>
<!-- Orders -->
<div class="orders">
    <div class="row">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="box-title">Admin </h4>
                    <input type="button" id="btnShowModal" value="Add New admin" class="btn btn-primary" />
                </div>
