@model Eventique.Models.Photographer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_CustomPhotographer.cshtml";
}

<h1>Edit</h1>

<h4>Photographer</h4>
<hr />
<div class="row container">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Photographers" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ph_Id" />
            <div class="form-group">
                <label asp-for="Ph_Name" class="control-label"></label>
                <input asp-for="Ph_Name" class="form-control" />
                <span asp-validation-for="Ph_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input type="text" asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFilePath" class="control-label"></label>
                <input type="file" asp-for="ImageFilePath" class="form-control" />
                <span asp-validation-for="ImageFilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

