@model Album

@{
    ViewData["Title"] = "CreateAlbum";
    Layout = "~/Views/Shared/_CustomPhotographer.cshtml";
}

<h1>CreateAlbum</h1>

<h4>Album</h4>
<hr />
<div class="row container">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Photographers" asp-action="CreateAlbum">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Al_Title" class="control-label"></label>
                <input asp-for="Al_Title" class="form-control" />
                <span asp-validation-for="Al_Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFilePath" class="control-label"></label>
                <input type="file" asp-for="ImageFilePath" class="form-control"multiple />
                <span asp-validation-for="ImageFilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

